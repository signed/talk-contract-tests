{
  "name": "ts-consumer",
  "version": "0.0.1",
  "description": "calculator consumer in ts",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "test": "jest'",
    "test:consumer": "jest --runInBand --roots='<rootDir>/pacts' --testMatch='**/pacts/**/*.pact.ts'",
    "pact:publish": "node pacts/publish.js"
  },
  "dependencies": {
    "isomorphic-unfetch": "3.0.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "9.9.5",
    "@types/jest": "25.2.1",
    "jest": "25.3.0",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3"
  },
  "config": {
    "pact_do_not_track": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ]
  }
}
