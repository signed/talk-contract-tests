{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "test": "jest --setupFilesAfterEnv='<rootDir>/tests/setup.ts'",
    "test:consumer": "jest --runInBand --roots='<rootDir>/pacts' --testMatch='**/pacts/**/*.pact.ts'",
    "pact:publish": "node pact/publish.js"
  },
  "devDependencies": {
    "@pact-foundation/pact": "9.9.5",
    "@types/jest": "25.2.1",
    "jest": "25.3.0",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true,
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverage": true
  },
  "dependencies": {
    "isomorphic-unfetch": "3.0.0"
  }
}
